<div>
<%= link_to 'Back', pins_path, class: "pager"%>
</div>
<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
     <div class="panel-heading center">
        <%= image_tag @pin.image.url(:medium) %>
     </div>
     <div class="panel-body">
       <p><%= @pin.description %></p>
       <p><strong><%= @pin.user.name if @pin.user %></strong></p>
       <p><%= @pin.address %></p>
       <%= link_to contact_path(@pin.id) do %>
         <span class="glyphicon glyphicon-envelope" title="Email"></span>
       <% end %>
       <%= link_to "sms:#{@pin.user.phone}" do %>
         <span class="glyphicon glyphicon-comment" title="SMS"></span>
       <% end %>
       <% if @pin.user == current_user %>
         <%= link_to edit_pin_path(@pin) do %>
          	<span class="glyphicon glyphicon-edit"></span>
          	Edit
        	<% end %>
        <% end %>
     </div>
   </div>
 </div>
</div>

