<h1>Alle Einträge</h1>

<table>
  <thead>
    <tr>
      <th>Beschreibung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Anzeigen', pin %></td>
        <td><%= link_to 'Bearbeiten', edit_pin_path(pin) %></td>
        <td><%= link_to 'Löschen', pin, method: :delete, data: { confirm: 'Bist du sicher?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuer Eintrag', new_pin_path %>
