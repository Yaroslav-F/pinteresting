<%= render 'pages/home' unless user_signed_in? %>

<div class="container-fluid">
<div class="row">
  <div class="col-sm-6 col-md-4">
   <div class="thumbnail">
        <div class="caption">
        <h3>Search by Location:</h3>
        <p>
          <%= form_tag pins_path, method: :get, class: "form-search" do %>
          <div class="form-group">
            <%= text_field_tag :search, "", class: "form-control", placeholder: "E.g. 'Eiffel Tower, Paris, FR'" %>
          </div>
          <div class="form-group">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
        </p>
     </div>
   </div>
  </div>
</div>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <div class="caption">
        <h3>Full-Text Search:</h3>
        <p>
          <%= search_form_for @q, class: "form-search" do |f| %>
            <div class="form-group">
              <%= f.text_field :description_cont, class: "input-medium search-query form-control", placeholder: "E.g. 'Eiffel Tower, Paris, FR'" %>
            </div>
            <div class="form-group">
              <%= f.submit "Search", class: "btn btn-primary" %>
            </div>
          <% end %>
        </p>
     </div>
    </div>
  </div>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div class="caption">
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            Filter by Type
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Offers", filters_path('offer') %></li>
            <li><%= link_to "Requests", filters_path('request') %></li>
          </ul>
      </div>
    </div>
  </div>
</div> <!-- /.row -->
</div> <!-- /.container-fluid -->


<div id="pins" class="transitions-enabled">
  <% if @pins.any? %>
    <% @pins.each do |pin| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
        <div class="panel-body">
          <%= pin.description %><br/>
          <strong><%= pin.user.name if pin.user %></strong>



          <% if current_user && (pin.user == current_user) %>
            <div class="actions">
                <%= link_to edit_pin_path(pin) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
              <% end %>
              <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash"></span>
                Delete
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h3>We don't have any results for <%= params[:q] ? params[:q][:description_cont] : params[:search] %></h3>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>