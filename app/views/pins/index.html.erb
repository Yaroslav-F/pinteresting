<%= render 'pages/home' unless user_signed_in? %>


<nav class="navbar navbar-static-top navbar-default" role="navigation">
  <div class="container">
    <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="col-sm-8 col-md-8">
      
        <%= form_tag pins_path, method: :get, class: "navbar-form", id: "search-form" do %>
          <div class="btn-group">
            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" type='button' aria-expanded="true"><span class="selection">Search by Location:</span> <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
              <li role='presentation'><a role="menuitem" tabindex="-1" href="#" id="location-search"><strong>Search by Location</strong></a></li>
              <li role='presentation'><a role="menuitem" tabindex="-1" href="#" id="full-text-search"><strong>Full-Text Search</strong></a></li>
            </ul>
          </div>
          <div class="input-group">
              <%= text_field_tag :search, "", class: "form-control", placeholder: "E.g. 'Eiffel Tower, Paris, FR'" %>
              <div class="input-group-btn">
                <%= button_tag class: "btn-success btn", type: "submit" do %>
                  <span class="glyphicon glyphicon-search"></span>
                <% end %>
              </div>
          </div>
        <% end %>
      </div>

      <div class="col-sm-3 col-md-3 col-offset-1">
          <div class="btn-group nav navbar-nav navbar-right" role="group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            Filter by Type
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Offers", filters_path('offer') %></li>
            <li><%= link_to "Requests", filters_path('request') %></li>
          </ul>
          </div>
      </div>
  </div><!-- /.container -->
</nav>

<div id="pins" class="transitions-enabled">
  <% if @pins.any? %>
    <% @pins.each do |pin| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
        <div class="panel-body">
          <%= pin.description %><br/>
          <strong><%= pin.user.name if pin.user %></strong>
          
          <% if current_user && (pin.user == current_user) %>
            <div class="actions">
                <%= link_to edit_pin_path(pin) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
              <% end %>
              <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash"></span>
                Delete
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h3>We don't have any results for <%= params[:q] ? params[:q][:description_cont] : params[:search] %></h3>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>